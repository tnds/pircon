<div class="line-numbers">
  <% for i in 1..1000 do %>
    <% if @projector.position == i %>
      <span id="projector" class="line-number">&nbsp;</span>
    <% else %>
      <span id="line<%= i %>" class="line-number">&nbsp;</span>
    <% end %>
  <% end %>
</div>

<%= content_for :stylesheets, stylesheet_link_tag('projector') %>
<%= content_for :meta do %>
  <meta http-equiv="refresh" content="5" url="<%= refinery.projectors_projector_path(@projector, :anchor => "projector")  %> " />
<% end %>
<%= render '/refinery/content_page' %>
